<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp" android:background="@color/colorWhite" tools:context="com.codelaxy.attendanceapp.activities.MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/activity_mainActivity" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/adminButton"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@color/colorBlue"
        android:text="ADMIN"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/attendanceButton"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="219dp"
        android:background="@color/colorBlue"
        android:text="ATTENDANCE"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/enquiryButton"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@color/colorBlue"
        android:text="ENQUIRY"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="263dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/naukarizone" />
</RelativeLayout>